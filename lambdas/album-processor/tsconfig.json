{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2016", "ES2015", "ES2020"],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "../build/lambda",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "typeRoots": ["../../node_modules/@types"]
  },
  "include": ["src/**/*", "../../node_modules"],
  "exclude": ["./node_modules", "**/*.spec.ts"]
}
